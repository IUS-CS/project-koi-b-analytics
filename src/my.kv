#:import utils kivy.utils
<Button>
#global button settings
    font_size: 24
    background_normal: ''#ensures colors are not muted
    background_color: utils.get_color_from_hex('#282C34')
    color: utils.get_color_from_hex('#BCCFF5')
    bold: True
    outline_color: utils.get_color_from_hex('#282C34')
    outline_width: 1
#global label settings
<TextInput>
#global input settings
    font_size: 20
<Label>
#global label settings
    font_size: 24

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        #padding: 25
        #spacing: 50
        size_hint:(.15, 1)
            #THESE BUTTONS WILL NAVIGATE YOU TO CORRESPONDING WINDOWS ON THE RIGHT
        ###########ROW 1################
        GridLayout:
            cols: 4
            row_force_default: True
            row_default_height: 50
            Button:
                id: buildR # used as parameter in press function
                text: "Build A Roster"
                width: 270
            Button:
                id: viewR # used as parameter in press function
                text: "View Rosters"
                width: 270
            Button:
                id: runRep # used as parameter in press function
                text: "Run Report"
                width: 270
            Button:
                id: viewFeed # used as parameter in press function
                text: "My Feed"
                width: 270



